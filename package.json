{
  "name": "buddy",
  "version": "0.0.1",
  "description": "Dead simple cross-domain iframe messaging",
  "main": "dist/buddy.cjs.js",
  "repository": "https://github.com/p3ol/buddy.git",
  "author": "Ugo Stephant <ugo@poool.fr>",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "jsnext:main": "dist/lib/index.js",
  "module": "dist/lib/index.js",
  "unpkg": "dist/buddy.min.js",
  "cdn": "dist/buddy.min.js",
  "esnext": "src",
  "scripts": {
    "build:module": "BABEL_ENV=module ./node_modules/.bin/babel ./src --out-dir ./dist/lib",
    "build:browser": "BABEL_ENV=browser ./node_modules/.bin/rollup -c",
    "build": "yarn build:browser && yarn build:module",
    "prepack": "yarn build && yarn test",
    "test": "jest",
    "changelog": "./node_modules/.bin/auto-changelog"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "auto-changelog": "^1.16.1",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "rollup": "^1.26.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2"
  }
}
