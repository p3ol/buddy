{
  "name": "@poool/buddy",
  "version": "1.0.2",
  "description": "üêï Dead simple cross-domain iframe messaging",
  "main": "dist/buddy.cjs.js",
  "repository": "https://github.com/p3ol/buddy.git",
  "author": "Ugo Stephant <ugo@poool.fr>",
  "contributors": [
    "Nicolas Auger <nicolas@poool.fr>"
  ],
  "license": "MIT",
  "sideEffects": false,
  "unpkg": "dist/buddy.min.js",
  "cdn": "dist/buddy.min.js",
  "jsnext:main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "esnext": "src",
  "engines": {
    "node": ">=12",
    "yarn": ">=1"
  },
  "scripts": {
    "prebuild": "rm -rf ./dist || true",
    "build": "yarn build:default && yarn build:ie",
    "build:default": "BABEL_ENV='default' ./node_modules/.bin/rollup -c",
    "build:ie": "BABEL_ENV='ie' ./node_modules/.bin/rollup -c",
    "test": "BABEL_ENV='tests' ./node_modules/.bin/jest",
    "posttest": "./node_modules/.bin/nyc report --reporter=html",
    "prepack": "yarn lint && yarn build && yarn test",
    "serve": "./node_modules/.bin/webpack serve --config ./webpack.config.js",
    "lint": "./node_modules/.bin/eslint .",
    "changelog": "./node_modules/.bin/standard-changelog",
    "release": "./node_modules/.bin/standard-version && git push --follow-tags",
    "release:beta": "./node_modules/.bin/standard-version --prerelease beta && git push --follow-tags",
    "release:rc": "./node_modules/.bin/standard-version --prerelease rc && git push --follow-tags"
  },
  "devDependencies": {
    "@babel/cli": "7.18.9",
    "@babel/core": "7.18.9",
    "@babel/eslint-parser": "7.18.9",
    "@babel/eslint-plugin": "7.17.7",
    "@babel/plugin-transform-runtime": "7.18.9",
    "@babel/preset-env": "7.18.9",
    "@poool/eslint-config": "2.0.0",
    "@poool/eslint-plugin": "2.0.0",
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-commonjs": "22.0.1",
    "@rollup/plugin-node-resolve": "13.3.0",
    "auto-changelog": "2.4.0",
    "babel-jest": "28.1.3",
    "babel-loader": "8.2.5",
    "eslint": "8.20.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.2.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.30.1",
    "html-webpack-plugin": "5.5.0",
    "istanbul-instrumenter-loader": "3.0.1",
    "jest": "28.1.3",
    "jest-dev-server": "6.1.1",
    "nyc": "15.1.0",
    "puppeteer": "15.4.0",
    "puppeteer-to-istanbul": "1.4.0",
    "rollup": "2.77.0",
    "rollup-plugin-eslint": "7.0.0",
    "rollup-plugin-terser": "7.0.2",
    "sinon": "14.0.0",
    "standard-changelog": "2.0.27",
    "standard-version": "9.5.0",
    "webpack": "5.73.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.9.3"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "7.18.9",
    "core-js": "3.24.0"
  }
}
