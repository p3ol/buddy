    "html-webpack-plugin": "5.6.3",
    "jest": "29.7.0",
    "jest-dev-server": "11.0.0",
    "nyc": "17.1.0",
    "puppeteer": "24.2.0",
    "puppeteer-to-istanbul": "1.4.0",
    "rollup": "4.34.6",
    "rollup-plugin-dts": "6.1.1",
