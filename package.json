{
  "name": "@poool/buddy",
  "version": "4.0.0",
  "description": "üêï Dead simple cross-domain iframe messaging",
  "main": "dist/buddy.cjs.js",
  "repository": "https://github.com/p3ol/buddy.git",
  "author": "Ugo Stephant <ugo@poool.fr>",
  "contributors": [
    "Nicolas Auger <nicolas@poool.fr>"
  ],
  "license": "MIT",
  "sideEffects": false,
  "unpkg": "dist/buddy.min.js",
  "cdn": "dist/buddy.min.js",
  "jsnext:main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "esnext": "src",
  "types": "dist/types/index.d.ts",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "clean": "rm -rf ./dist || true",
    "build": "yarn clean && yarn build:code && yarn build:dts",
    "build:code": "tsup",
    "build:dts": "tsc --project ./tsconfig.build.json",
    "test": "jest",
    "dev": "yarn dev:web & yarn dev:ws",
    "dev:web": "vite",
    "dev:ws": "yarn tsx --watch examples/websocket-server.ts",
    "prepack": "yarn lint && yarn build && yarn test",
    "lint": "eslint --max-warnings=0 --cache .",
    "release": "commit-and-tag-version && git push --follow-tags",
    "release:dry": "commit-and-tag-version --dry-run",
    "release:beta": "commit-and-tag-version --prerelease beta && git push --follow-tags",
    "release:rc": "commit-and-tag-version --prerelease rc && git push --follow-tags"
  },
  "devDependencies": {
    "@poool/eslint-config": "5.0.2",
    "@swc/core": "1.13.3",
    "@swc/jest": "0.2.39",
    "@types/jest": "30.0.0",
    "@types/node": "24.2.0",
    "@types/sinon": "17.0.4",
    "@types/ws": "8.18.1",
    "commit-and-tag-version": "12.5.2",
    "eslint": "9.32.0",
    "jest": "30.0.5",
    "jest-dev-server": "11.0.0",
    "puppeteer": "24.16.0",
    "sinon": "21.0.0",
    "ts-node": "10.9.2",
    "tsup": "8.5.0",
    "tsx": "4.20.3",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.0",
    "vite": "7.0.6",
    "ws": "8.18.3"
  },
  "packageManager": "yarn@4.9.2"
}
