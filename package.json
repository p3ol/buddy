{
  "name": "@poool/buddy",
  "version": "0.0.1-beta.7",
  "description": "üêï Dead simple cross-domain iframe messaging",
  "main": "dist/buddy.cjs.js",
  "repository": "https://github.com/p3ol/buddy.git",
  "author": "Ugo Stephant <ugo@poool.fr>",
  "contributors": [
    "Nicolas Auger <nicolas@poool.fr>"
  ],
  "license": "MIT",
  "sideEffects": false,
  "unpkg": "dist/buddy.min.js",
  "cdn": "dist/buddy.min.js",
  "jsnext:main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "esnext": "src",
  "engines": {
    "node": ">=12",
    "yarn": ">=1"
  },
  "scripts": {
    "prebuild": "rm -rf ./dist || true",
    "build": "yarn build:default && yarn build:ie",
    "build:default": "BABEL_ENV='default' ./node_modules/.bin/rollup -c",
    "build:ie": "BABEL_ENV='ie' ./node_modules/.bin/rollup -c",
    "test": "BABEL_ENV='tests' ./node_modules/.bin/jest",
    "posttest": "./node_modules/.bin/nyc report --reporter=html",
    "prepack": "yarn lint && yarn build && yarn test",
    "serve": "./node_modules/.bin/webpack serve --config ./webpack.config.js",
    "lint": "./node_modules/.bin/eslint .",
    "changelog": "./node_modules/.bin/standard-changelog",
    "release": "./node_modules/.bin/standard-version && git push --follow-tags",
    "release:beta": "./node_modules/.bin/standard-version --prerelease beta && git push --follow-tags"
  },
  "devDependencies": {
    "@babel/cli": "7.14.8",
    "@babel/core": "7.14.8",
    "@babel/eslint-parser": "7.14.7",
    "@babel/eslint-plugin": "7.14.5",
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-env": "7.14.8",
    "@poool/eslint-config": "1.5.0",
    "@poool/eslint-plugin": "1.5.0",
    "@rollup/plugin-alias": "3.1.4",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "19.0.2",
    "@rollup/plugin-node-resolve": "13.0.4",
    "auto-changelog": "2.3.0",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "eslint": "7.31.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.24.0",
    "html-webpack-plugin": "5.3.2",
    "istanbul-instrumenter-loader": "3.0.1",
    "jest": "26.6.3",
    "jest-dev-server": "5.0.3",
    "nyc": "15.1.0",
    "puppeteer": "10.1.0",
    "puppeteer-to-istanbul": "1.4.0",
    "rollup": "2.54.0",
    "rollup-plugin-eslint": "7.0.0",
    "rollup-plugin-terser": "7.0.2",
    "sinon": "11.1.1",
    "standard-changelog": "2.0.27",
    "standard-version": "9.3.1",
    "webpack": "5.46.0",
    "webpack-cli": "4.7.2",
    "webpack-dev-server": "3.11.2"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "7.14.8",
    "core-js": "3.15.2"
  }
