{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "baseUrl": "./src"
  },
  "exclude": [
    "tests",
    "**/*.test.ts",
    "tsup.config.ts",
    "vite.config.ts",
    "jest.config.ts",
    "examples",
    "coverage",
    "dist",
    "*.js",
  ],
  "include": ["src"]
}
